{
  "name": "wator-engine",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "typescript": "tsc --noEmit",
    "eslint": "eslint --ext .ts ./src",
    "lint": "yarn typescript && yarn eslint",
    "dev": "ts-node-dev --respawn --transpileOnly ./index.ts",
    "build": "tsc",
    "serve": "node dist/index.js",
    "prod": "npm run build && npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrgorecki/wator-engine.git"
  },
  "author": "piotrgorecki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piotrgorecki/wator-engine/issues"
  },
  "homepage": "https://github.com/piotrgorecki/wator-engine#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.2",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint"
    ]
  },
  "jest": {
    "testRegex": "(/src/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
