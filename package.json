{
  "name": "wator-engine",
  "version": "0.0.1",
  "description": "",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "Wator",
    "simulator"
  ],
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "typescript": "tsc --noEmit",
    "eslint": "eslint --ext .ts ./src",
    "lint": "yarn typescript && yarn eslint",
    "dev": "ts-node-dev --respawn --transpileOnly ./index.ts",
    "build": "tsc",
    "ben": "ts-node-dev --respawn --transpileOnly ./src/engine.benchmark.ts",
    "dv": "ts-node-dev --respawn --transpileOnly ./src/dataview.ts",
    "serve": "node lib/index.js",
    "prod": "npm run build && npm run serve",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrgorecki/wator-engine.git"
  },
  "author": "Piotr GÃ³recki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piotrgorecki/wator-engine/issues"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/piotrgorecki/wator-engine#readme",
  "dependencies": {
    "seedrandom": "^3.0.5"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.11",
    "@types/seedrandom": "^2.4.28",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.2",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint"
    ]
  },
  "jest": {
    "testRegex": "(/src/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
